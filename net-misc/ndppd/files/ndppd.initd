command="/usr/bin/ndppd"
pidfile="/var/run/ndppd.pid"
configfile="/etc/ndppd.conf"
command_args="-p $pidfile -c ${configfile} -d"
start_stop_daemon_args="--quiet"
description="Proxies NDP messages between interfaces."

depend() {
	use net
}
